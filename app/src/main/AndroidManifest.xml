<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wyz.everynews1">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:allowBackup="true"
        android:name="com.example.wyz.everynews1.MyApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".mvp.ui.main.activity.NewsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".mvp.ui.main.activity.NewsDetailActivity"/>
        <activity android:name=".mvp.ui.main.activity.NewsPhotoDetailActivity"/>
        <activity android:name=".mvp.ui.main.activity.PhotoActivity"/>
        <activity android:name=".mvp.ui.main.activity.PhotoDetailActivity"/>
    </application>

</manifest>