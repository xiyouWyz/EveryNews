<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardList_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/item_background"
    >
    <RelativeLayout
        android:id="@+id/list_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <ImageView
        android:id="@+id/news_summary_photo_iv"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="8dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        />
        <TextView
            android:id="@+id/news_summary_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/news_summary_photo_iv"
            android:lines="2"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/news_summary_title_tv"
            android:text="@string/news_summary_digest_tv"
            />
        <TextView
            android:id="@+id/news_summary_digest_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/news_summary_title_tv"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/news_summary_photo_iv"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/news_summary_digest_tv"
            tools:text="@string/news_summary_digest_tv"/>

        <TextView
            android:id="@+id/news_summary_ptime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/news_summary_digest_tv"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/tertiary_text"
            android:textSize="@dimen/news_summary_time_tv"
            tools:text="@string/news_summary_time_tv"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
